public  class Silver extends Customer{
private char typeClass;//the type based on customer classification

public Silver(String name,String id){//constructor to initialize the attributes with the received parameters
super(name,id);
typeClass='S';//type of Silver Class

}


public double calculateDiscount(double price){//a method to discounting the received price by -15% then it returns the discounted price
return (price-((price*15)/100));
}


public String toString(){
return super.toString()+"\nType Class:"+typeClass;

}
}
