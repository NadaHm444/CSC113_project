package it113project;

public class JewelryStore {
  private String StoreName;
  public Order[]ListOrders;
  private int numOfOrders;
  
  public JewelryStore( String StoreName,int size) {
   this.StoreName=StoreName;
   ListOrders=new Order[size];
   numOfOrders=0;
  }
  public boolean addOrder(Order order) {
	  if(numOfOrders<ListOrders.length) {
		  ListOrders[numOfOrders++]= order;
		  return true;}
	  else  return false;
  }
  public boolean deleteOrder(String orderId) {
	  for(int i=0;i<numOfOrders;i++)
		  if(ListOrders[i].getOrderId().equals(orderId)) {
			  ListOrders[i]=ListOrders[numOfOrders-1];
	  
	  numOfOrders--;
	  ListOrders[numOfOrders]=null;
	  return true;  }
	  
	  return false;
  }
  public Order searchOrder(String orderId) {
	  for(int i=0;i<numOfOrders;i++)
		  if(ListOrders[i].getOrderId().equals(orderId)){
			  return ListOrders[i]; }
			  
			return null;  
  }
  public void display(){
String str="";
str+="Store name: "+StoreName+"\nNumber of orders: "+numOfOrders+"\nAll info orders:\n";

for(int i=0;i<numOfOrders;i++)
str+=ListOrders[i].toString()+"\n";

System.out.println(str);
}
  
}
